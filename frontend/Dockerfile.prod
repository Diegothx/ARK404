# Build stage
FROM node:20-alpine as build
WORKDIR /app

COPY package*.json ./
RUN npm ci           # Installs exact versions
COPY . .
RUN npm run build    # Creates /app/dist

# Production stage
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html    # Copy built frontend
COPY nginx.conf /etc/nginx/conf.d/default.conf      # Custom Nginx config for API proxy

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
